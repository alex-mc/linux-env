#!/usr/bin/env python3

import sys
import time

def print_help():
    print("slowprint filename period(ms)")

try:
    fn = sys.argv[1]
except:
    print_help()
    exit(1)

try:
    period = int(sys.argv[2])
except:
    period = 100

try:
    bufsize = int(sys.argv[3])
except:
    bufsize = 1

with open(fn) as f:
    lines = f.readlines()

for i in range(len(lines)):
    print(lines[i], end="")
    if (i+1) % bufsize == 0:
        time.sleep(period/1000.0)

exit(0)
